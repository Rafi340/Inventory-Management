    <script>
        $(function () {
            $("#products").DataTable({
                processing: true,
                serverSide: true,
                responsive: true,
                lengthChange: true,
                autoWidth: false,
                lengthMenu: [
                    [10, 25, 50, -1],
                    [10, 25, 50, 'All']
                ],
                ajax: {
                    url: "/Admin/Products/GetProducts",
                    type: "POST",
                    contentType: "application/json", //must be added
                    dataType: "json", //better to add, not mandatory
                    data: function (d) {
                        d.SearchItem = {};
                        return JSON.stringify(d);
                    },
                },
                columnDefs: [
                        {
                         targets: 0, // checkbox column
                         orderable: false
                     },
                    {
                        orderable: false,
                        targets: 11,
                        render: function (data, type, row) {
                            console.log(type);
                            return `

                                            <div class="dropdown">
                                          <button
                                           class="btn p-0"
                                           type="button"
                                          id="actionButtonId"
                                         data-bs-toggle="dropdown"
                                       aria-haspopup="true"
                                         aria-expanded="false">
                                         <i class="ti ti-dots-vertical ti-sm text-muted"></i>
                                        </button>
                                     <div class="dropdown-menu dropdown-menu-end" aria-labelledby="actionButtonId">
                                           <a class="dropdown-item" onclick="window.location.href='/Admin/Products/Update/${data}'" value='${data}'> <i class="fa-solid fa-pencil me-2"></i> Edit </a>
                                          <a class="dropdown-item show-bs-modal"  data-id='${data}' value='${data}'><i class="fas fa-trash me-2"></i>Delete</a>
                                    </div>
                                     </div>
                                            
                                            `;
                        }
                    }
                ]
            });

            $('#products').on('click', '.show-bs-modal', function (e) {
                e.preventDefault();
                var id = $(this).data('id');
                let deletemodal = $('#modal-delete');
                deletemodal.find('.modal-body p').text('Are you sure you want to delete this Product?');
                $('#delete-id').val(id);
                $('#delete-form').attr('action', '/admin/products/delete');
                deletemodal.modal('show');
            });
            $('#delete-button').click(function(){
                $('#delete-form').submit();
            });
        });

        document.addEventListener("DOMContentLoaded", function () {
          const selectAll = document.getElementById("select-all");

          if (selectAll) {
            selectAll.addEventListener("change", function () {
              const checkboxes = document.querySelectorAll("input.form-check-input[type='checkbox']:not(#select-all)");
              checkboxes.forEach(cb => cb.checked = selectAll.checked);
            });
          }
        });
    </script>
}