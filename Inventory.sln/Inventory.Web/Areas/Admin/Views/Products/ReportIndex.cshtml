@model ProductListModel
@{
    ViewData["Title"] = "Product ";
}

@section Styles
{
    <link rel="stylesheet" href="~/assets/vendor/libs/typeahead-js/typeahead.css" />
    <link rel="stylesheet" href="~/assets/vendor/libs/datatables-bs5/datatables.bootstrap5.css" />
    <link rel="stylesheet" href="~/assets/vendor/libs/datatables-responsive-bs5/responsive.bootstrap5.css" />
    <link rel="stylesheet" href="~/assets/vendor/libs/datatables-checkboxes-jquery/datatables.checkboxes.css" />
    <link rel="stylesheet" href="~/assets/vendor/libs/datatables-buttons-bs5/buttons.bootstrap5.css" />
    <link rel="stylesheet" href="~/assets/vendor/libs/flatpickr/flatpickr.css" />
    <link rel="stylesheet" href="~/assets/vendor/libs/datatables-checkboxes-jquery/datatables.checkboxes.css" />

    <!-- Row Group CSS -->
    <link rel="stylesheet" href="~/assets/vendor/libs/datatables-rowgroup-bs5/rowgroup.bootstrap5.css" />
    <!-- Form Validation -->
    <link rel="stylesheet" href="~/assets/vendor/libs/formvalidation/dist/css/formValidation.min.css" />
}

            <div class="card">
               
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label>Name</label>
                                <input type="text" asp-for="SearchItem.Name" class="form-control" />
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label>Barcode (SKU)</label>
                        <input type="text" asp-for="SearchItem.ProductCode" class="form-control" />
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label for="UnitId" class="form-label">Unit</label>
                                <select asp-for="SearchItem.UnitId" asp-items="Model?.UnitList" class="form-select">
                                    <option value="">Choose...</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label for="CategoryId" class="form-label">Category</label>
                                <select asp-for="SearchItem.CategoryId" asp-items="Model?.CategoryList" class="form-select">
                                    <option value="">Choose...</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
               
                
            </div>
     
<div class="card mt-2">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <h5 class="card-title mb-2">Available products</h5>
            </div>
            <div class="col-md-6 text-end">
                <button class="btn btn-primary" onclick="window.location.href='/Admin/Products/Add'">Add Product</button>
            </div>
        </div>
    </div>

    <div class="card-datatable table-responsive pt-0">
        <partial name="_ResponsePartial" />
        <partial name="_ModalPartial" />
        <table id="Products" class="datatables-basic table table-sm small">
            <thead>
                <tr>
                    <th><input type="checkbox" id="select-all" class="form-check-input" /></th>
                    <th>Image</th>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Unit Name</th>
                    <th>Category Name</th>
                    <th>Purchase Price</th>
                    <th>MRP Price</th>
                    <th>Wholesale Price</th>
                    <th>Stock</th>
                    <th>Low Stock</th>
                    <th>Damage Stock</th>
                    <th>Actions</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
            
     

@section Scripts
{
    <script src="~/assets/vendor/libs/datatables-bs5/datatables-bootstrap5.js"></script>
 
  
    <script>
        $(function () {
            let debounceTimer;
            $("#Products").DataTable({
                processing: true,
                serverSide: true,
                responsive: false,
                lengthChange: true,
                searching: false,
                autoWidth: false,
                lengthMenu: [
                    [10, 25, 50, -1],
                    [10, 25, 50, 'All']
                ],
                layout: {
                    topStart: 'buttons',  // Buttons on the Left
                    topEnd: 'search',     // Search Bar on the Right
                },
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ],
                ajax: {
                    url: "/Admin/Products/GetProductReport",
                    type: "POST",
                    contentType: "application/json", //must be added
                    dataType: "json", //better to add, not mandatory
                    data: function (d) {
                        d.SearchItem = {
                            Name: $("#SearchItem_Name").val(),
                            ProductCode: $("#SearchItem_ProductCode").val(),
                            UnitId: $("#SearchItem_UnitId").val() === ""? null : $("#SearchItem_UnitId").val(),
                            CategoryId: $("#SearchItem_CategoryId").val() === "" ? null : $("#SearchItem_CategoryId").val()
                        };
                        return JSON.stringify(d);
                    },
                },
                columnDefs: [
                    {
                        orderable: false,
                        targets: [0,1]
                    },
                    
                    {
                        orderable: false,
                        targets: 12,
                        responsivePriority: 1,
                        render: function (data, type, row) {
                            console.log(type);
                            return ` <div class="dropdown">
                                          <button
                                           class="btn p-0"
                                           type="button"
                                          id="actionButtonId"
                                         data-bs-toggle="dropdown"
                                       aria-haspopup="true"
                                         aria-expanded="false">
                                         <i class="ti ti-dots-vertical ti-sm text-muted"></i>
                                        </button>
                                     <div class="dropdown-menu dropdown-menu-end" aria-labelledby="actionButtonId">
                                           <a class="dropdown-item" onclick="window.location.href='/Admin/Products/Update/${data}'" value='${data}'> <i class="fa-solid fa-pencil me-2"></i> Edit </a>
                                          <a class="dropdown-item show-bs-modal"  data-id='${data}' value='${data}'><i class="fas fa-trash me-2"></i>Delete</a>
                                    </div>
                                     </div>`;
                        }
                    }
                ]
            });

            $('#Products').on('click', '.show-bs-modal', function () {
                let id = $(this).data("id");
                let deleteModal = $("#modal-delete");
                deleteModal.find('.modal-body p').text('Are you sure you want to delete this Product?');
                $('#delete-id').val(id);
                $('#delete-form').attr('action', '/admin/Products/delete');
                deleteModal.modal('show');
            });

            $('#delete-button').click(function()
            {
                $('#delete-form').submit();
            });
             $(".form-control, .form-select").on("input change", function () {
            clearTimeout(debounceTimer);
            debounceTimer = setTimeout(() => {
                $('#Products').DataTable().ajax.reload(null, false);
            }, 500);
            });
             document.addEventListener("DOMContentLoaded", function () {
          const selectAll = document.getElementById("select-all");

          if (selectAll) {
            selectAll.addEventListener("change", function () {
              const checkboxes = document.querySelectorAll("input.form-check-input[type='checkbox']:not(#select-all)");
              checkboxes.forEach(cb => cb.checked = selectAll.checked);
            });
          }
        });
            $("#searchButton").click(function () {
                $('#Products').DataTable().ajax.reload(null, false);
            });

        });
    </script>
}

