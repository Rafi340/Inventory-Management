@using Inventory.Domain.ViewModel
@model DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}
    <div class="row match-height">
        <!-- Total Customers -->
        <div class="col-xl-4 col-md-6 col-12">
            <div class="card">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="fw-bolder mb-0">@Model.TotalCustomer</h4>
                        <p class="card-text">Total Customers</p>
                    </div>
                    <div class="avatar bg-light-primary p-50">
                        <span class="avatar-content">
                            <i class="fas fa-users fa-lg text-primary"></i>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Products -->
        <div class="col-xl-4 col-md-6 col-12">
            <div class="card">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="fw-bolder mb-0">@Model.TotalProduct</h4>
                        <p class="card-text">Total Products</p>
                    </div>
                    <div class="avatar bg-light-success p-50">
                        <span class="avatar-content">
                            <i class="fas fa-boxes fa-lg text-success"></i>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Sales -->
        <div class="col-xl-4 col-md-6 col-12">
            <div class="card">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="fw-bolder mb-0">@Model.TotalSellPrice</h4>
                        <p class="card-text">Total Sales</p>
                    </div>
                    <div class="avatar bg-light-warning p-50">
                    <span class="avatar-content fw-bold fs-4 text-warning">
                        ৳
                    </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

