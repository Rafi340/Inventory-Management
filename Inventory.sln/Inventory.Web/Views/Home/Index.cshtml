@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/home.css" />
<!-- Hero Section -->
<div class="hero-section">
    <div class="container">
        <h1 class="mb-3">Welcome to InventoryPro</h1>
        <p class="mb-4">Track, manage, and optimize your inventory like never before.</p>
        <a href="/admin/Products/Index" class="btn btn-light btn-lg btn-animated m-2">View Product</a>
        <a href="/admin/Products/ReportIndex" class="btn btn-outline-light btn-lg btn-animated m-2">View Product Report</a>
    </div>
</div>

<!-- Features Section -->
<div class="container py-5">
    <div class="row text-center">
        <div class="col-md-4 fade-in delay-1">
            <div class="feature-box mb-4">
                <i class="bi bi-box-seam display-4 text-primary mb-3"></i>
                <h5>Real-time Tracking</h5>
                <p>Monitor your inventory levels and updates in real time with full visibility.</p>
            </div>
        </div>
        <div class="col-md-4 fade-in delay-2">
            <div class="feature-box mb-4">
                <i class="bi bi-speedometer2 display-4 text-success mb-3"></i>
                <h5>Fast & Easy Input</h5>
                <p>Add, update, and organize products with simple, clean input forms.</p>
            </div>
        </div>
        <div class="col-md-4 fade-in delay-3">
            <div class="feature-box mb-4">
                <i class="bi bi-graph-up display-4 text-warning mb-3"></i>
                <h5>Insights & Reports</h5>
                <p>Generate reports to make data-driven decisions and streamline operations.</p>
            </div>
        </div>
    </div>
</div>

<!-- Footer -->
<footer class="text-center py-4 text-muted">
